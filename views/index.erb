<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.2.1/material.blue_grey-indigo.min.css" />
  <script defer src="https://code.getmdl.io/1.2.1/material.min.js"></script>
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
  <title>Brewer Home</title>
  <style media="screen">
    .table-card {
      width: 80%;
      padding: 0;
    }
  </style>
</head>

<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">Brewer Home</span>
      </div>
      <!-- Tabs -->
      <div class="mdl-layout__tab-bar mdl-js-ripple-effect">
        <a href="#scroll-tab-1" class="mdl-layout__tab is-active">Relays & Pump</a>
        <a href="#scroll-tab-2" class="mdl-layout__tab">PID</a>
        <a href="#scroll-tab-3" class="mdl-layout__tab">Current Procedure</a>
      </div>
    </header>
    <br><br>

    <main class="mdl-layout__content">
      <div class="page-content">
        <div class="row">
          <section class="mdl-layout__tab-panel is-active" id="scroll-tab-1">
            <div class="page-content">
              <div class="col-md-4 col-md-offset-2">
                <!-- Relay Status Card -->
                <div class="mdl-card mdl-shadow--4dp table-card">
                  <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">All Relays Status</h2>
                  </div>
                  <div class="mdl-card__supporting-text">
                    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" style="width: 100%;">
                      <thead>
                        <tr>
                          <th class="mdl-data-table__cell--non-numeric">Relay Name</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @relays_status.each do |relay_name, status| %>
                          <tr>
                            <td class="mdl-data-table__cell--non-numeric"><strong><%= relay_name %></strong></td>
                            <td><strong><%= status %></strong></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                  <div class="mdl-card__actions mdl-card--border">
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <!-- Set relay card -->
                <div class="mdl-card mdl-shadow--4dp">
                  <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Relay Configuration</h2>
                  </div>
                  <div class="mdl-card__supporting-text">
                    <form action="/apply-relay-config" enctype='application/json' method="post">
                      <!-- HLT to option -->
                      <div class="mdl-select mdl-select--floating-label">
                        <label class="mdl-select__label" for="hlt_to">HLT to: </label>
                        <select class="mdl-select__input" id="hlt_to" name="hlt_to">
                          <option value="mash">Mash</option>
                          <option value="boil">Boil</option>
                        </select>
                      </div>
                      <br>
                      <!-- RIMS to option -->
                      <div class="mdl-select mdl-select--floating-label">
                        <label class="mdl-select__label" for="rims_to">RIMS to: </label>
                        <select class="mdl-select__input" id="rims_to" name="rims_to">
                          <option value="mash">Mash (Circulate)</option>
                          <option value="boil">Boil</option>
                        </select>
                      </div>
                      <br>
                      <!-- HLT on option -->
                      <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="hlt">
                        <input type="checkbox" id="hlt" name="hlt" value="1" class="mdl-switch__input">
                        <input type="hidden" id="hlt" name="hlt" value="0">
                        <span class="mdl-switch__label">HLT On?</span>
                      </label>
                      <br>
                  </div>
                  <div class="mdl-card__actions mdl-card--border">
                    <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                      Apply Configuration
                    </button>
                  </form>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <section class="mdl-layout__tab-panel" id="scroll-tab-2">
                <div class="page-content">
                  <div class="mdl-card mdl-shadow--4dp">
                    <div class="mdl-card__title mdl-card--expand">
                      <h2 class="mdl-card__title-text">PID Status</h2>
                    </div>
                    <div class="mdl-card__supporting-text">
                      <p>
                        Coming soon
                      </p>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                      <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                        Here's a button
                      </button>
                    </div>
                  </div>
                </div>
            </section>
        </div>
      </div>
    </main>
  </div>
</body>

</html>
